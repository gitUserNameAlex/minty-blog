{
	"compilerOptions": {
		"outDir": "./build/",
		"noImplicitAny": true,
		"module": "ESNext",
		"target": "es5",
		"jsx": "react-jsx",
		"allowJs": true,
		"moduleResolution": "node",
		"baseUrl": ".", 
		//Все абсолютные импорты идут из папки src
		"paths": {
			"*": ["./src/*"]
		},
		//Позволяет использовать стандартные импорты
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true
	},
	"ts-node": {
		"compilerOptions": {
			"module": "CommonJS"
		}
	}
}
